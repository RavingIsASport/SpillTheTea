<header class="max-w-lg mx-auto flex justify-center mt-12">
  <h1 class="text-slate-600 text-5xl font-mono">Not Twitter</h1>
</header>

<main
  class="bg-teal-50/70 max-w-sm flex flex-col mx-auto mt-10 p-8 rounded-lg shadow-2xl"
>
  <section><p class="text-lg text-center font-mono">Sign Up</p></section>

  <form class="mt-4" id="signupForm">
    <div class="mb-6 pt-3 bg-slate-300 rounded-md">
      <label
        for="name"
        class="block text-xs text-gray-600 mb-3 ml-2"
      >Name</label>
      <input
        type="text"
        class="bg-slate-300 rounded w-full focus:outline-none border-b-4 border-slate-400 focus:border-emerald-500 transition duration-500 px-2 pb-2"
        id="name"
      />
    </div>
    <div class="mb-6 pt-3 bg-slate-300 rounded-md">
      <label
        for="email"
        class="block text-xs text-gray-600 mb-3 ml-2"
      >Email</label>
      <input
        type="text"
        class="bg-slate-300 rounded w-full focus:outline-none border-b-4 border-slate-400 focus:border-emerald-500 transition duration-500 px-2 pb-2"
        id="email"
      />
    </div>

    <div class="mb-6 pt-3 bg-slate-300 rounded-lg">
      <label
        for="password"
        class="block text-xs text-gray-600 mb-3 ml-2"
      >Password</label>
      <input
        type="password"
        class="bg-slate-300 rounded w-full focus:outline-none border-b-4 border-slate-400 focus:border-emerald-500 transition duration-500 px-2 pb-2"
        id="password"
      />
    </div>
    <button
      class="bg-emerald-300 px-4 py-2 rounded-full text-slate-700 font-mono w-full hover:bg-emerald-500 hover:text-slate-100"
      type="submit"
    >
      Create Account
    </button>
  </form>
</main>
<script src="./js/signup.js"></script>